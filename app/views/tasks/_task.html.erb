
<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
    <h1>タスク一覧</h1>
    
    <p> id : タスク : ステータス</p>
    <ul>
      <% @tasks.each do |task| %>
        <li><%= link_to task.id, task %> : <%= task.content %> : <%= task.status %></li>
      <% end %>
    </ul>
    
    <%= paginate @tasks %>
    
    <%= link_to '新規タスクの投稿', new_task_path %>
  </div>
</div>